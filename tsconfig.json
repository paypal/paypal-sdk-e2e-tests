{
    "compilerOptions": {
        "outDir": "./.tsbuild/",
        "sourceMap": false,
        "target": "ES2020",
        "module": "CommonJS",
        "removeComments": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "strictPropertyInitialization": true,
        "strict": false,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "types": ["node", "mocha", "chai", "@wdio/globals/types"]
    },
    "ts-node": { "files": true }
}
