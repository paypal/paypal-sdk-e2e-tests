{
    "compilerOptions": {
        "outDir": "./.tsbuild/",
        "sourceMap": false,
        "target": "ES2020",
        "module": "CommonJS",
        "removeComments": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "strictPropertyInitialization": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "webdriverio/async",
            "mocha",
            "chai",
            "@wdio/globals/types"
        ]
    }
}
